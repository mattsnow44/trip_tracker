<h1><%= @address.id ? 'Edit Address' : "Add An Address to #{@location.name}" %></h1>

<%= form_for [@location, @address] do |f| %>
<%= f.label :street %>
<%= f.text_field :street, autofocus: true %>
<%= f.label :city %>
<%= f.text_field :city %>
<%= f.label :state %>
<%= f.text_field :state %>
<%= f.label :zip %>
<%= f.text_field :zip %>


<%= f.submit %>
<% end %>
